#modalSignin
  section.container.modalstyle
    .login
      a(href="#").close
        i(class="fa fa-window-close" aria-hidden="true")
      h1.modal-title Hello!  
      form(method="post" action="index.html")
        p
          input(type="text" name="login" value="" placeholder="Login or Email")
        p
          input(type="password" name="password" value="" placeholder="Password")
        p.remember_me
          label Remember
            input(type="checkbox" name="remember_me")
        p.submit
          input(type="submit" name="commit" value="Enter").button.enter
    .login-help
      a(href="index.html").modallink Foggot password?
      br
      a(href="index.html").modallink Sign In